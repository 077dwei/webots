<?xml version="1.0"?>
<launch>
  <!-- start Webots -->
  <arg name="no-gui" default="false," doc="Start Webots with minimal GUI"/>
  <include file="$(find webots_ros)/launch/webots.launch">
    <arg name="mode" value="realtime"/>
    <arg name="no-gui" value="$(arg no-gui)"/>
    <arg name="world" value="$(env WEBOTS_HOME)/projects/languages/ros/worlds/ros_python.wbt"/>
  </include>

  <arg name="auto-close" default="false" doc="Startup mode"/>
  <node name="webots_ros_python" pkg="webots_ros" type="ros_python.py" required="$(arg auto-close)"/>  <!-- TODO: set WEBOTS_HOME, LD_LIBRARY_PATH, PYTHONPATH -->
  <node name="ros_controller" pkg="webots_ros" type="ros_controller.py" required="$(arg auto-close)"/>
</launch>
